FROM node:18.6.0-slim as builder
ARG VITE_AUTHSERV_URL
ARG VITE_SPRINGPING_URL
ARG VITE_AXUMTRANSFORM_URL
ENV VITE_AUTHSERV_URL $VITE_AUTHSERV_URL
ENV VITE_SPRINGPING_URL $VITE_SPRINGPING_URL
ENV VITE_AXUMTRANSFORM_URL $VITE_AXUMTRANSFORM_URL
ADD . /source
WORKDIR /source
run npm install
run npm run build

FROM nginx:1.23.0
COPY --from=builder /source/dist /usr/share/nginx/html
